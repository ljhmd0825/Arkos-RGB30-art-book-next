 <theme>

   <view name="detailed,video">

<!--  no image game-metadata-background  -->

      <image name="gamelist-background" extra="true">
         <size>0.5 1</size> <!--  <zIndex>4</zIndex> -->
      </image> 

   </view>

   <view name="detailed">

      <image name="md_image"> <!-- <zIndex>3</zIndex> -->
         <origin>0.5 0.5</origin>
         <pos>0.75 0.5</pos><!-- 480 240 -->
         <color>FFFFFF99</color> <!-- 60% -->
         <maxSize>1.5 1.5</maxSize>
      </image>

   </view>

   <view name="video">

      <video name="md_video"> <!-- <zIndex>3</zIndex> -->
         <origin>0.5 0.5</origin>
         <pos>0.75 0.5</pos><!-- 480 240 -->
         <maxSize>1.5 1.5</maxSize>
         <effect>none</effect>
         <showSnapshotDelay>true</showSnapshotDelay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <color>FFFFFF99</color> <!-- 60% -->
      </video>

      <image name="md_marquee"> <!--  zIndex not set -->
         <pos>0.75 0.5</pos><!-- 480 240 -->
         <maxSize>0.4 0.9</maxSize><!-- 230 430 -->
      </image>

   </view>

</theme>
