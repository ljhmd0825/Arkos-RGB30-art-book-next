 <theme>
   <view name="system">
      <carousel name="systemcarousel"> <!-- system slice -->
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <color>00000000</color>
         <type>horizontal</type>
         <logoScale>1</logoScale>
         <logoSize>1.025 1.025</logoSize>
         <zIndex>3</zIndex>
         <maxLogoCount>3</maxLogoCount>
         <scrollSound>./_inc/sounds/scroll.wav</scrollSound>
         <defaultTransition>instant</defaultTransition>
      </carousel>
      <image name="logo"> <!-- system slice -->
         <path>./_inc/systems/_default.png</path>
         <path>./_inc/systems/${system.theme}.png</path>
         <color>ffffffcc</color>
         <saturation>${systemArtSaturation}</saturation>
      </image>

      <image name="system-art" extra="true"> <!-- this is logo at here -->
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <maxSize>0.7 0.5</maxSize>
         <color>${systemLogoColor}</color>
<!--          <path>./_inc/logo/${system.theme}.svg</path> -->
         <path>./_inc/logo/${system.theme}.png</path>
         <zIndex>50</zIndex>
      </image>

      <image name="system-carousel-bakground" extra="true">
         <origin>0.5 0</origin>
         <pos>0.5 0</pos>
         <size>1 1</size>
         <tile>true</tile>
         <color>${systemCarouselBackgroundColor}</color>
         <path>${spacerImage}</path>
         <zIndex>2</zIndex>
      </image>

   </view>
</theme>
